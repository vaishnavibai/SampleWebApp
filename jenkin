pipeline {
    agent any
    tools {
          maven 'Maven home'
        }

    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-key', 
                url: 'https://github.com/vaishnavibai/SampleWebApp.git'
            }
        }
        stage('Maven-Clean-Compile') {
            steps {
				sh "mvn clean compile"
            }
        }
        stage('Maven-Package') {
            steps {
				sh "mvn package"
            }
        }
        stage('Ansible-Deployment') {
            steps {
				ansiblePlaybook become: true, credentialsId: 'ec2-user', disableHostKeyChecking: true, installation: 'Ansible', inventory: 'hosts', playbook: 'install_httpd.yml'
            }
        }
    }
}
